{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 to-gray-800 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl w-full grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="bg-white rounded-lg shadow-xl p-6">
            <h2 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
                <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Comptes de test
            </h2>
            
            <div class="space-y-3">
                <div class="bg-red-50 border border-red-200 rounded-lg p-3">
                    <div class="flex items-center mb-2">
                        <span class="px-2 py-1 bg-red-600 text-white text-xs font-semibold rounded">ADMIN</span>
                    </div>
                    <p class="text-sm text-gray-700 font-mono">admin@example.com</p>
                    <p class="text-sm text-gray-600 font-mono">password</p>
                </div>

                <div class="bg-gray-200 border border-gray-300 rounded-lg p-3">
                    <div class="flex items-center mb-2">
                        <span class="px-2 py-1 bg-gray-600 text-white text-xs font-semibold rounded">MANAGER</span>
                    </div>
                    <p class="text-sm text-gray-700 font-mono">manager@example.com</p>
                    <p class="text-sm text-gray-600 font-mono">password</p>
                </div>

                <div class="bg-blue-50 border border-blue-200 rounded-lg p-3">
                    <div class="flex items-center mb-2">
                        <span class="px-2 py-1 bg-blue-600 text-white text-xs font-semibold rounded">USER</span>
                    </div>
                    <p class="text-sm text-gray-700 font-mono">user@example.com</p>
                    <p class="text-sm text-gray-600 font-mono">password</p>
                </div>
            </div>

            <div class="mt-4 pt-4 border-t border-gray-200">
                <p class="text-xs text-gray-500 text-center">
                    Cliquez sur un compte pour copier les identifiants
                </p>
            </div>
        </div>

        <div class="lg:col-span-2 bg-white rounded-lg shadow-xl p-8">
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold text-gray-900">Backoffice</h1>
                <p class="mt-2 text-sm text-gray-600">Gestion de matériel de randonnée</p>
            </div>

            {% if error %}
                <div class="mb-6 bg-red-50 border-l-4 border-red-400 p-4 rounded">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-red-700">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-6 bg-blue-50 border-l-4 border-blue-400 p-4 rounded">
                    <p class="text-sm text-blue-700">
                        Vous êtes déjà connecté en tant que {{ app.user.userIdentifier }}.
                        <a href="{{ path('app_logout') }}" class="font-medium underline">Se déconnecter</a>
                    </p>
                </div>
            {% endif %}

            <form method="post" class="space-y-6">
                <div>
                    <label for="username" class="block text-sm font-medium text-gray-700 mb-2">
                        Adresse email
                    </label>
                    <input 
                        type="email" 
                        value="{{ last_username }}" 
                        name="_username" 
                        id="username" 
                        autocomplete="email" 
                        required 
                        autofocus
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                        placeholder="admin@example.com"
                    >
                </div>

                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
                        Mot de passe
                    </label>
                    <input 
                        type="password" 
                        name="_password" 
                        id="password" 
                        autocomplete="current-password" 
                        required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                        placeholder="••••••••"
                    >
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button 
                    type="submit"
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
                >
                    Se connecter
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}

