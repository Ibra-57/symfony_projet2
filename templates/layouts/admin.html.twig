{% extends 'base.html.twig' %}

{% block body %}
<div class="flex h-screen overflow-hidden">
    <aside class="w-64 bg-gray-900 text-white flex flex-col">
        <div class="p-6 border-b border-gray-800">
            <h1 class="text-2xl font-bold">Backoffice</h1>
            <p class="text-sm text-gray-400 mt-1">Gestion de matériel</p>
        </div>

        <nav class="flex-1 overflow-y-auto py-4">
            <ul class="space-y-1 px-3">
                <li>
                    <a href="{{ path('app_dashboard') }}" 
                       class="flex items-center px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors {{ app.request.get('_route') == 'app_dashboard' ? 'bg-gray-800' : '' }}">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                        </svg>
                        <span>Tableau de bord</span>
                    </a>
                </li>
                
                {% if is_granted('ROLE_ADMIN') %}
                <li class="pt-4 pb-2">
                    <span class="px-4 text-xs font-semibold text-gray-500 uppercase">Administration</span>
                </li>
                <li>
                    <a href="#" 
                       class="flex items-center px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                        </svg>
                        <span>Utilisateurs</span>
                    </a>
                </li>
                {% endif %}
            </ul>
        </nav>

        <div class="p-4 border-t border-gray-800">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 rounded-full bg-gray-700 flex items-center justify-center">
                        <span class="text-sm font-medium">{{ app.user.firstname|first }}{{ app.user.lastname|first }}</span>
                    </div>
                </div>
                <div class="ml-3 flex-1">
                    <p class="text-sm font-medium">{{ app.user.firstname }} {{ app.user.lastname }}</p>
                    <p class="text-xs text-gray-400">{{ app.user.email }}</p>
                </div>
            </div>
            <a href="{{ path('app_logout') }}" 
               class="mt-3 w-full flex items-center justify-center px-4 py-2 bg-red-600 hover:bg-red-700 rounded-lg transition-colors text-sm font-medium">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                </svg>
                Déconnexion
            </a>
        </div>
    </aside>

    <main class="flex-1 overflow-y-auto">
        <header class="bg-white shadow-sm">
            <div class="px-8 py-4">
                <h2 class="text-2xl font-bold text-gray-900">{% block page_title %}Tableau de bord{% endblock %}</h2>
            </div>
        </header>

        <div class="p-8">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="mb-4 px-4 py-3 rounded-lg {% if label == 'success' %}bg-green-100 text-green-700{% elseif label == 'error' %}bg-red-100 text-red-700{% else %}bg-blue-100 text-blue-700{% endif %}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block content %}{% endblock %}
        </div>
    </main>
</div>
{% endblock %}
